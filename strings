#include <iostream>
#include <string>
using namespace std;

int main() {
    // Complete the program
    string a,b;
    cin>>a>>b;
    int lena,lenb;
    lena = a.size();
    lenb = b.size();
    cout<<lena<<" "<<lenb<<endl;
    cout<<a+b<<endl;
    char c=a[0];
    a[0]=b[0];
    b[0]=c;
    cout<<a<<" "<<b;
    return 0;
}
